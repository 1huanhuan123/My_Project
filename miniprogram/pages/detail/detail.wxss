/* pages/detail/detail.wxss */
.detail-container {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.image-container {
  width: 100%;
}

.detail-image {
  width: 100%;
}

.info-container {
  padding: 30rpx;
}

.info-item {
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.stats-container {
  display: flex;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.stat-item .iconfont {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.stat-text {
  font-size: 28rpx;
  color: #666;
}

.icon-favorite.active {
  color: #ff4d4f;
}

.icon-view {
  color: #52c41a;
}

.actions-container {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  padding: 0;
  margin: 0;
}

.action-btn::after {
  border: none;
}

.action-btn .iconfont {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.action-btn.delete {
  color: #ff4d4f;
} 