/* pages/upload/upload.wxss */
.upload-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.image-picker {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  background-color: #f9f9f9;
  border: 2rpx dashed #ddd;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.picker-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.picker-placeholder .iconfont {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #999;
}

.form-container {
  margin-top: 20rpx;
}

.form-picker {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-picker .iconfont {
  font-size: 28rpx;
  color: #999;
}

.upload-btn {
  margin-top: 40rpx;
  width: 100%;
} 