/* pages/search/search.wxss */
.search-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 40rpx;
  padding: 16rpx 20rpx;
  margin-right: 20rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input-box .iconfont {
  font-size: 32rpx;
  color: #999;
}

.icon-search {
  margin-right: 16rpx;
}

.icon-clear {
  margin-left: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  padding: 16rpx 30rpx;
  background-color: #4A90E2;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.result-header {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.image-list {
  padding: 10rpx 0;
}

.loading-more {
  padding: 20rpx 0;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

.search-tips {
  margin-top: 60rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-item {
  display: flex;
  margin-bottom: 16rpx;
}

.tips-dot {
  margin-right: 10rpx;
  color: #4A90E2;
}

.tips-text {
  font-size: 28rpx;
  color: #666;
}