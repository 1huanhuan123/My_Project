/* pages/profile/profile.wxss */
/* 登录页样式 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  min-height: 80vh;
}

.login-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
  text-align: center;
}

/* 登录按钮样式 */
.login-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #07C160 !important;
  color: white !important;
  border: none !important;
  width: 80%;
  font-size: 16px;
  font-weight: bold;
  height: 90rpx;
  border-radius: 45rpx;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 10rpx rgba(7, 193, 96, 0.3);
}

.wechat-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4A90E2;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4A90E2;
  border-radius: 3rpx;
}

/* 图片列表 */
.image-list {
  padding: 10rpx 0;
}

.loading-more {
  padding: 20rpx 0;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 设置列表 */
.settings-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-text {
  font-size: 30rpx;
  color: #333;
}

.settings-item .iconfont {
  font-size: 28rpx;
  color: #ccc;
} 